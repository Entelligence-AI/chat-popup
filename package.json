{
  "name": "@entelligence-ai/chat-widget",
  "version": "0.0.6",
  "private": false,
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  },
  "description": "Entelligence Chat Widget",
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Entelligence-AI/chat-popup"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && vite build --mode react && tsc --emitDeclarationOnly --outDir dist/types",
    "version:update": "ts-node scripts/version-update.ts",
    "prepublishOnly": "npm run version:update && npm run build",
    "publish": "npm publish --access public"
  },
  "dependencies": {
    "@assistant-ui/react-markdown": "^0.7.20",
    "@assistant-ui/react-ui": "^0.1.7",
    "@assistant-ui/react-syntax-highlighter": "^0.7.10",
    "@assistant-ui/react": "^0.7.77",
    "react-icons": "^5.4.0",
    "vite-plugin-css-injected-by-js": "^3.5.1",
    "vite-plugin-dts": "^4.5.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.4.9"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.26.3",
    "@eslint/js": "^9.8.0",
    "@types/node": "^22.2.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "eslint": "^9.8.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "postcss": "^8.4.41",
    "posthog-js": "^1.155.0",
    "react-syntax-highlighter": "^15.5.0",
    "remark-gfm": "^4.0.0",
    "tailwindcss": "^3.4.9",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.4.0",
    "ts-node": "^10.9.2"
  },
  "main": "./dist/vanilla/entelligence-chat.umd.js",
  "module": "./dist/vanilla/entelligence-chat.es.js",
  "types": "./dist/types/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/main.d.ts",
      "import": "./dist/vanilla/entelligence-chat.es.js",
      "require": "./dist/vanilla/entelligence-chat.umd.js"
    },
    "./react": {
      "types": "./dist/types/react/index.d.ts",
      "import": "./dist/react/entelligence-chat-react.es.js",
      "require": "./dist/react/entelligence-chat-react.umd.js"
    },
    "./style.css": {
      "import": "./dist/react/style.css",
      "require": "./dist/react/style.css"
    }
  },
  "typesVersions": {
    "*": {
      "react": [
        "./dist/types/react/index.d.ts"
      ],
      "*": [
        "./dist/types/main-vanilla.d.ts"
      ]
    }
  }
}